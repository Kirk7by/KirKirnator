<Window x:Class="ExpertComputerService.GenerateWork_AddHeroAndQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertComputerService"
        mc:Ignorable="d"
        Title="Окно добавления нового героя" Height="360.528" Width="722.149">
    <Grid>
        <Button x:Name="Sumbit" Content="Отправить" Margin="159,0,0,10" VerticalAlignment="Bottom" Height="42" HorizontalAlignment="Left" Width="154" Click="Sumbit_Click"/>
        <TextBox x:Name="tbQuestName" Height="90" Margin="10,162,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Введите название героя и вопрос, который будет&#xD;&#xA;в наибольшей степени характерезивать этого героя." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="382" Height="52"/>
        <TextBox x:Name="tbHeroName" Height="30" Margin="10,98,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Название героя:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold"/>
        <Label x:Name="label1_Copy" Content="Вопрос, характерезующий героя:" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Width="213" FontWeight="Bold"/>
        <Button x:Name="Sumbit_Cancel" Content="Отмена" Margin="377,0,0,10" HorizontalAlignment="Left" Width="154" Click="Sumbit_Click" Height="42" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
