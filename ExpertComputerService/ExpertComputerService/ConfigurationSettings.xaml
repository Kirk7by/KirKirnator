<Window x:Class="ExpertComputerService.ConfigurationSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertComputerService"
        mc:Ignorable="d"
        Title="ConfigurationSettings" Height="447.237" Width="650.812">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="41"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Margin="0,0,0,2" Grid.ColumnSpan="3">
            <TabItem Header="Настройки&#xD;&#xA;базы данных">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,3">
                    <Label x:Name="label" Content="Приоритетный вопрос" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="136"/>
                    <ComboBox x:Name="tbQuestionPriority" Margin="10,26,10,0" VerticalAlignment="Top" Height="31"/>
                    <Label x:Name="label_Copy" Content="Минимальная &#xD;&#xA;вероятность вопроса" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="132"/>
                    <Label x:Name="label1" Content="0," HorizontalAlignment="Left" Margin="148,81,0,0" VerticalAlignment="Top" Width="25" HorizontalContentAlignment="Right" FontSize="18.667" FontWeight="Bold"/>
                    <Label x:Name="label_Copy1" Content="Воличество героев выводимых в конце игры, в случае, &#xD;&#xA;если не получились угадать" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Width="332" Height="44"/>
                    <TextBox x:Name="TbListHeroMaxProbality" HorizontalAlignment="Left" Height="28" Margin="340,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" BorderThickness="1" FontSize="18.667" Background="{x:Null}" VerticalContentAlignment="Center" Foreground="#FF03530A"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button x:Name="btSave" Content="Сохранить" Margin="7,0,7,5" BorderThickness="0" Background="#FF727685" BorderBrush="White" Foreground="White" Click="btSave_Click" Grid.Row="1" Grid.Column="1" Height="33" VerticalAlignment="Bottom"/>
        <Button x:Name="button_Copy" Content="Отмена" Margin="10,0,7,5" BorderThickness="0" Background="#FF727685" BorderBrush="White" Foreground="White" Grid.Row="1" Height="33" VerticalAlignment="Bottom"/>
        <Button x:Name="btDefaultSettings" Content="По умолчанию" Margin="7,0,10,5" BorderThickness="0" Background="#FF727685" BorderBrush="White" Foreground="White" Grid.Row="1" Grid.Column="2" Height="33" VerticalAlignment="Bottom" Click="btDefaultSettings_Click"/>
        <TextBox x:Name="tbMinProbabilityQuestion" HorizontalAlignment="Left" Height="28" Margin="171,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" Grid.ColumnSpan="2" BorderThickness="1" FontSize="18.667" Background="{x:Null}" VerticalContentAlignment="Center" Foreground="#FF03530A"/>

    </Grid>
</Window>
