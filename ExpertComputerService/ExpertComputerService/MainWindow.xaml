<Window x:Name="ExpertSystemNeronLan" x:Class="ExpertComputerService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertComputerService"
        mc:Ignorable="d"
        Title="KirKinatorです" Height="385.118" Width="627.173" WindowStartupLocation="CenterScreen"  WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Dictionary2DarkViolet.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{DynamicResource GridStyleMainWindow}">
        <Button x:Name="lern" Content="Обучение" Margin="10,0,22,197" VerticalAlignment="Bottom" RenderTransformOrigin="0.256,-6.533" Height="78" BorderBrush="{x:Null}" Foreground="White" Style="{DynamicResource DefaultButtonStyle}"  FontFamily="Segoe UI" FontSize="26.667" Click="lern_Click"/>
        <Label x:Name="label" Content="Добро пожаловать в KirKinator BETA Version 0.2.5. (Байесовская&#xA;гибридная динамическая темпоральная сеть)... Выбер режима..." VerticalAlignment="Top" Background="#B2000000" FontSize="20" Foreground="White" Height="72"/>
        <Button x:Name="diagnostyc" Content="Играть!" Margin="10,0,22,116" VerticalAlignment="Bottom" RenderTransformOrigin="0.256,-6.533" Height="76" IsDefault="True" Click="diagnostyc_Click" BorderBrush="{x:Null}" Foreground="White" Style="{DynamicResource DefaultButtonStyle}"  FontFamily="Segoe UI" FontSize="26.667" />
        <Button x:Name="configurations" Content="Конфигурирование" Margin="10,0,22,30" VerticalAlignment="Bottom" RenderTransformOrigin="0.256,-6.533" Height="81" BorderBrush="{x:Null}" Foreground="White" Style="{DynamicResource DefaultButtonStyle}" FontFamily="Segoe UI" FontSize="26.667"  Click="configurations_Click"/>
        <CheckBox x:Name="checkBox" Content="Больше не показывать" HorizontalAlignment="Right" Margin="0,0,8,4" VerticalAlignment="Bottom" Background="White" BorderBrush="#FF955151" Foreground="Black" FontWeight="Bold"/>

    </Grid>
</Window>
