<Window x:Class="ExpertComputerService.LearnSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertComputerService"
        mc:Ignorable="d"
        Title="LearnSystem" Height="510.421" Width="706.941" MouseMove="Window_MouseMove">


    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" Storyboard.TargetName="dgrid" BeginTime="00:00:00" >
                            <SplineThicknessKeyFrame KeyTime="00:00:00" Value="177,0,1000,10" />
                            <SplineThicknessKeyFrame KeyTime="00:00:00.2600000" Value="177,0,10,10" />
                            </ThicknessAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="#FF9B9CA0">
        
        <Grid RenderTransformOrigin="-0.53,-1.94" Background="#CC6C766A" Margin="0,28,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgrid" Margin="177,0,10,10" Background="#CCF0F0F0" ColumnWidth="*" Grid.Row="1"/>
            <Grid x:Name="gridAddQuest" Height="0" Margin="177,0,10,0" VerticalAlignment="Top">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0B3553" Offset="0.01"/>
                        <GradientStop Color="#7F2D5116" Offset="0.974"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Button x:Name="buttonAddQuest" Content="Добавить" HorizontalAlignment="Right" Margin="0,24,10,0" VerticalAlignment="Top" Width="75" Background="#E5DDDDDD" Click="buttonAddQuest_Click"/>
                <Label x:Name="label" Content="Добавление вопроса" Margin="0,0,307,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Consolas" Foreground="White"/>
                <TextBox x:Name="textBoxAddQuestion" Height="23" Margin="10,24,90,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#E5FFFFFF"/>
            </Grid>
            <Grid HorizontalAlignment="Left" Width="177" Grid.RowSpan="2">
                <Button x:Name="buttonQuestions" HorizontalAlignment="Left" Content="Вопросы" Margin="9,83,0,0" VerticalAlignment="Top" Width="163" Height="60" Style="{DynamicResource DefaultButtonStyle}" BorderBrush="{x:Null}" Background="#CCC6C7C6" Foreground="White" Click="buttonQuestions_Click">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
										Storyboard.TargetName="gridAddQuest" 
										Storyboard.TargetProperty="Height"
										From="0" To="62" Duration="0:0:0.4"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Button x:Name="buttonDominations" Content="Доминирование" HorizontalAlignment="Left" Margin="9,148,0,0" VerticalAlignment="Top" Width="163" Height="60" Style="{DynamicResource DefaultButtonStyle}" BorderBrush="{x:Null}" Background="#CCC6C7C6" Foreground="White" Click="buttonDominations_Click"/>
                <Button x:Name="deletebut" Content="Удалить" HorizontalAlignment="Left" Margin="9,354,0,0" VerticalAlignment="Top" Width="162" Height="38" Click="deletebut_Click"/>
                <Button x:Name="buttonHeroes" Content="Герои" HorizontalAlignment="Left" Margin="9,20,0,0" VerticalAlignment="Top" Width="163" Height="60" Style="{DynamicResource DefaultButtonStyle}" BorderBrush="{x:Null}" Background="#CCC6C7C6" Foreground="White" Click="buttonHeroes_Click"/>
                <Label x:Name="ProgressSuccessLabel" Content="Успех операции" HorizontalAlignment="Left" Margin="10,213,0,0" VerticalAlignment="Top" Background="White" BorderBrush="#FF5DE61C" Foreground="#FF05B405" FontWeight="Bold" FontSize="18.667" Width="162"/>
                <Button x:Name="button_Copy" Content="Изменить" HorizontalAlignment="Left" Margin="9,311,0,0" VerticalAlignment="Top" Width="162" Height="38"/>
                <Button x:Name="button_Add" Content="Добавить" HorizontalAlignment="Left" Margin="8,268,0,0" VerticalAlignment="Top" Width="162" Height="38"/>
            </Grid>
        </Grid>
        <Button x:Name="BackMenu" Content="Вернуться" HorizontalAlignment="Left" Width="92" Style="{DynamicResource buttonSetupStyle}" Background="#FF698181" BorderBrush="{x:Null}" Foreground="White" Height="28" VerticalAlignment="Top" BorderThickness="1,1,1,0" Click="BackMenu_Click"/>

    </Grid>
</Window>
